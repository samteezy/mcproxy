{
  "downstream": {
    "transport": "stdio"
  },
  "upstreams": [
    {
      "id": "filesystem",
      "name": "Filesystem Server",
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/tmp"],
      "enabled": true,
      "tools": {
        "read_file": {
          "compression": { "enabled": false }
        }
      }
    },
    {
      "id": "fetch",
      "name": "Fetch",
      "transport": "stdio",
      "command": "uvx",
      "args": ["mcp-server-fetch"],
      "enabled": true,
      "tools": {
        "fetch": {
          "compression": {
            "tokenThreshold": 500,
            "maxOutputTokens": 200,
            "customInstructions": "Preserve all URLs, dates, and code examples verbatim."
          },
          "overwriteDescription": "Fetches the contents of a URL. Use this only when the user has provided a specific URL in their message.",
          "hideParameters": ["max_length"],
          "parameterOverrides": {
            "max_length": 50000
          }
        }
      }
    }
  ],
  "compression": {
    "baseUrl": "http://localhost:8080/v1",
    "apiKey": "your-api-key",
    "model": "your-model",
    "defaultPolicy": {
      "enabled": true,
      "tokenThreshold": 1000,
      "maxOutputTokens": 500
    },
    "bypassEnabled": false,
    "retryEscalation": {
      "enabled": true,
      "windowSeconds": 60,
      "tokenMultiplier": 2
    }
  },
  "cache": {
    "enabled": true,
    "ttlSeconds": 300,
    "maxEntries": 1000
  },
  "logLevel": "info"
}
