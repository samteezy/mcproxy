{
  "downstream": {
    "transport": "stdio"
  },
  "upstreams": [
    {
      "id": "filesystem",
      "name": "Filesystem Server",
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/tmp"],
      "enabled": true
    },
    {
      "id": "everything",
      "name": "Everything Server (Demo)",
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-everything"],
      "enabled": true
    }
  ],
  "compression": {
    "baseUrl": "http://localhost:8080/v1",
    "model": "your-model",
    "defaultPolicy": {
      "enabled": true,
      "tokenThreshold": 1000,
      "maxOutputTokens": 500
    },
    "toolPolicies": {
      "filesystem__read_file": {
        "enabled": false
      },
      "everything__fetch": {
        "tokenThreshold": 200,
        "maxOutputTokens": 100
      }
    }
  },
  "cache": {
    "enabled": true,
    "ttlSeconds": 300,
    "maxEntries": 1000
  },
  "logLevel": "info"
}
